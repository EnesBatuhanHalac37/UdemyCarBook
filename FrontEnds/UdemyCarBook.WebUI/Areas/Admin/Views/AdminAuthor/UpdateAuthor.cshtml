@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Author Güncelleme Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Author ile ilgili bilgleri eksiksiz doldurmaniz önemlidir...
                            Veri Girişinden Sonra Kaydet Butonuna tıklayarak  Güncelleme işlemi Tamamlayabilirsiniz...
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                                <label for="exampleInputUpdateName">Name</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputUpdateName" placeholder="Author Name Girisi Yapiniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUpdateDescription">Description</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputUpdateDescription" placeholder="Author Description Girisi Yapiniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUpdateImageUrl">ImageUrl</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputUpdateImageUrl" placeholder="Author Image Url Girisi Yapiniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Author Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>






