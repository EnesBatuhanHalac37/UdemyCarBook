@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Araç Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Anasyfa Banner Alanı ile ilgili bilgleri eksiksiz doldurmaniz önemlidir...
                            Tasarımda Bozulma olmaması Adına Sadece 1 Banner Verisi Yeterlidir.
                            Veri Girişinden Sonra Kaydet Butonuna tıklayarak işlemi Tamamlayabilirsiniz...
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık İsmi</label>
                                <input type="text" asp-for="Title" class="form-control" id="exampleInputTitle" placeholder="Title  Girişi yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Marka İsmi</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputDescription" placeholder="Başlık Açıklama Girişi yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputVideoURL">VideoUrl</label>
                                <input type="text" asp-for="VideoUrl" class="form-control" id="exampleInputVideoURL" placeholder="Video URL Girişi yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Description</label>
                                <input type="text" asp-for="VideoDescription" class="form-control" id="exampleInputVideoDescription" placeholder="Video Description Girişi yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Kaydet</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>




