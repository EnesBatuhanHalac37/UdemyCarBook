@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Güncelleme Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Banner ile ilgili bilgleri eksiksiz doldurmaniz önemlidir...
                            Veri Girişinden Sonra Kaydet Butonuna tıklayarak  Güncelleme işlemi Tamamlayabilirsiniz...
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerID" />
                            <div class="form-group">
                                <label for="exampleInputUpdateTitle">Title</label>
                                <input type="text" asp-for="Title" class="form-control" id="exampleInputUpdateTitle" placeholder="Banner Title Girisi Yapiniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUpdateDescription">Description</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputUpdateDescription" placeholder="Banner Description Girisi Yapiniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUpdateVideoDescription">Video Description</label>
                                <input type="text" asp-for="VideoDescription" class="form-control" id="exampleInputUpdateVideoDescription" placeholder="Banner Video Description Girisi Yapiniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUpdateVideoUrl">VideoUrl</label>
                                <input type="text" asp-for="VideoUrl" class="form-control" id="exampleInputUpdateVideoUrl" placeholder="Banner Video URL Girisi Yapiniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>




