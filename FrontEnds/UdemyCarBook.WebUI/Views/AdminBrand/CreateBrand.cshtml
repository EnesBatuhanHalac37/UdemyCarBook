@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Araç Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Araç ile ilgili bilgleri eksiksiz doldurmaniz önemlidir...
                            Veri Girişinden Sonra Kaydet Butonuna tıklayarak işlemi Tamamlayabilirsiniz...
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Marka İsmi</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputName" placeholder="Araç Model Girişi yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


