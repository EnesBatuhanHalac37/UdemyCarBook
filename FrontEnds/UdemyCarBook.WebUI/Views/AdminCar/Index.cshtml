@model List<ResultCarWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Listesi</h4>
                        <p class="card-subtitle mb-4">
                           Araçlar ile ilgili Ekleme - Silme - Güncelleme - Arama ve Listeleme Gibi İşlemleri bu sayfa üzerinden
                           gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>VitesTürü</th>
                                        <th>KM</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <th scope="row">@(count+1)</th>
                                        <td>@item.brandName</td>
                                        <td>@item.model</td>
                                        <td>@item.transmission</td>
                                        <td>@item.km</td>
                                        <td><a href="/AdminCar/RemoveCar/@item.carID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminCar/UpdateCar/@item.carID" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/CarList/CarDetail/@item.carID" class="btn btn-outline-dark">Detaylar</a></td>
                                        <td><a href="/CarList/CarDetail/@item.carID" class="btn btn-outline-warning">Sitede Gör</a></td>
                                        <td><a href="/CarList/CarDetail/@item.carID" class="btn btn-outline-secondary">Fiyat Bilgleri</a></td>
                                        </tr>
                                        count++;
                                    }
                                    
                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Araç Oluştur...</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div> 
</div>
